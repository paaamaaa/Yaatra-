
<!DOCTYPE html>
<html lang="en">
<head>
    <% include ./common/head %>
</head>
<body>

<div class="container">

    <!--Table list for homestays-->
    <div class="table-wrapper">
        <div class="table-title">
            <div class="row">
                <div class="col-sm-6">
                    <h2>Homestays</h2>
                </div>

                <div class="col-sm-6">
                    <a href="#homestayAddModal" class="btn btn-success" data-toggle="modal"> <span><i class="fa fa-plus fa-1" aria-hidden="true"></i> Add Homestay</span></a>
                </div>

            </div>
        </div>
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>Photo</th>
                <th>Name</th>
                <th>Price</th>
                <th>Location</th>
                <th>Address</th>
            </tr>
            </thead>
            <tbody>

            <%  homestays.forEach(function(val){ %>
            <tr id="<%= val.id %>">
                <td><img src=" <%= '/images/homestays/'+ val.imagePath %>" alt="<%= val.name %>"></td>
                <td><%= val.name %></td>
                <td><%= val.price %></td>
                <td><%= val.description %></td>
                <td><%= val.location %></td>
                <td>
                    <!--<a  class="homestay-edit edit" data-toggle="modal"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>-->
                    <a class="homestay-delete delete"  data-toggle="modal" data-id="<%= val.id %>"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
                <td>
            </tr>

            <% }) %>

            </tbody>
        </table>
    </div>
    <!--Table list for homestays-->


    <!--Modal for adding new homestay-->
    <!-- Modal -->
    <div class="modal fade" id="homestayAddModal" tabindex="-1" role="dialog" aria-labelledby="homestayAddModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="homestayAddModalLabel">Add new Homestay</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form action="/homestays" method="POST"  enctype="multipart/form-data">
                <div class="modal-body">
                        <div class="form-group">
                            <label for="homeStayNameInput">Homestay Name</label>
                            <input type="text" placeholder="name" name="name" class="form-control" id="homeStayNameInput" />
                        </div>
                        <div class="form-group">
                            <label for="homeStayPriceInput">Price per day/night</label>
                            <input type="number" placeholder="price" name="price" class="form-control" id="homeStayPriceInput" />
                        </div>
                        <div class="form-group">
                            <label for="homeStayLocationInput">Location</label>
                            <input type="text" placeholder="location" name="location" class="form-control" id="homeStayLocationInput" />
                        </div>
                        <div class="form-group">
                            <label for="homeStayPriceInput">Description</label>
                            <textarea type="text" placeholder="description" name="description" class="form-control" id="homeStayPriceInput"></textarea>
                        </div>

                    <div class="form-group">
                        <label for="homeStayPriceInput">Photo</label>
                        <input type="file" value="Upload File" class="form-control" name="file" />
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <input type="submit" class="btn btn-primary" value="Save" />
                </div>
                </form>
            </div>
        </div>
    </div>
    <!--Modal for adding new homestay-->

    <!--Modal for edting current homestay-->
    <!-- Modal -->
    <div class="modal fade" id="homestayEditModal" tabindex="-1" role="dialog" aria-labelledby="homestayAddModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="homestayAddModalLabel">Add new Homestay</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form action="/homestays" method="POST"  enctype="multipart/form-data">
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="homeStayNameInput">Homestay Name</label>
                            <input type="text" placeholder="name" name="name" class="form-control" id="homeStayNameInput" />
                        </div>
                        <div class="form-group">
                            <label for="homeStayPriceInput">Price per day/night</label>
                            <input type="number" placeholder="price" name="price" class="form-control" id="homeStayPriceInput" />
                        </div>
                        <div class="form-group">
                            <label for="homeStayLocationInput">Location</label>
                            <input type="text" placeholder="location" name="location" class="form-control" id="homeStayLocationInput" />
                        </div>
                        <div class="form-group">
                            <label for="homeStayPriceInput">Description</label>
                            <textarea type="text" placeholder="description" name="description" class="form-control" id="homeStayPriceInput"></textarea>
                        </div>

                        <div class="form-group">
                            <label for="homeStayPriceInput">Photo</label>
                            <input type="file" value="Upload File" class="form-control" name="file" />
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        <input type="submit" class="btn btn-primary" value="Save" />
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!--Modal for adding new homestay-->

    <!-- Modal -->
    <div class="modal fade" id="homestayDeleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">

                <div class="modal-body">
                    Are you sure you want to delete this homestay ?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                    <button id="deleteHomestay" type="button" class="btn btn-primary">Yes</button>
                </div>
            </div>
        </div>
    </div>


</div>






</body>
</html>

